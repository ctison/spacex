{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "analyze": "ANALYZE=true yarn run build",
    "start": "next start",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx pages/ components/ model/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.35",
    "@fortawesome/free-solid-svg-icons": "5.15.3",
    "@fortawesome/react-fontawesome": "0.1.14",
    "@material-ui/core": "4.12.2",
    "@material-ui/icons": "4.11.2",
    "@material-ui/lab": "4.0.0-alpha.60",
    "next": "10.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "swr": "0.5.6"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "10.2.3",
    "@types/node": "16.4.2",
    "@types/react": "17.0.15",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.1",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:jsx-a11y/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "overrides": [
      {
        "files": [
          "pages/**/*.tsx"
        ],
        "rules": {
          "react/react-in-jsx-scope": "off"
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "import/no-unresolved": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "react/prop-types": "off",
          "@typescript-eslint/no-empty-interface": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "next.config.js"
  ],
  "renovate": {
    "extends": [
      "github>ctison/renovate-config"
    ],
    "automerge": true
  }
}
