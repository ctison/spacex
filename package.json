{
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "analyze": "ANALYZE=true yarn run build",
    "start": "next start",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx pages/ components/ model/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.34",
    "@fortawesome/free-solid-svg-icons": "5.15.2",
    "@fortawesome/react-fontawesome": "0.1.14",
    "@material-ui/core": "4.11.3",
    "@material-ui/icons": "4.11.2",
    "@material-ui/lab": "4.0.0-alpha.57",
    "next": "10.0.6",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "swr": "0.4.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "10.0.6",
    "@types/node": "14.14.22",
    "@types/react": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "eslint": "7.19.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.0.8",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "typescript": "4.1.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,yaml,gql,md,html,css}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:jsx-a11y/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "overrides": [
      {
        "files": [
          "pages/**/*.tsx"
        ],
        "rules": {
          "react/react-in-jsx-scope": "off"
        }
      },
      {
        "files": [
          "*.tsx"
        ],
        "rules": {
          "import/no-unresolved": "off",
          "jsx-a11y/anchor-is-valid": "off",
          "react/prop-types": "off",
          "@typescript-eslint/no-empty-interface": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "next.config.js"
  ],
  "renovate": {
    "extends": [
      "github>ctison/renovate-config"
    ],
    "automerge": true
  }
}
